<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://peachfuzzer.com/2012/Peach ../peach.xsd"
			 author="Deja Vu Security, LLC" description="User Datagram Protocol PIT" version="0.0.2">

	<!-- Copyright 2013 (c) Deja vu Security, LLC. All rights reserved. -->

	<Include ns="CommonAgents" src="file:##Path##/CommonAgents.xml"/>

	<DataModel name="MTU">
		<Number size="16" value="1500" signed="false"/>
	</DataModel>

	<DataModel name="UDPHeader">
		<Number name="SrcPort" size="16" endian="network"/>
		<Number name="DestPort" size="16" endian="network"/>
		<Number name="Length" size="16" endian="network">
			<Relation type="size" of="UDPHeader"/>
		</Number>
		<Number name="Checksum" size="16">
			<Fixup class="UDPChecksumFixup">
				<Param name="ref" value="UDPHeader"/>
				<Param name="src" value="##SourceIPv4##"/>
				<Param name="dst" value="##TargetIPv4##"/>
			</Fixup>
		</Number>
		<Blob name="Data" value="Hello"/>
	</DataModel>


	<StateModel name="TheState" initialState="Initial">
		<State name="Initial">
			<Action type="output">
				<DataModel ref="UDPHeader"/>
			</Action>
		</State>
	</StateModel>

	<StateModel name="MtuFuzzStates" initialState="Initial">
		<State name="Initial">
			<Action type="setProperty" property="MTU">
				<DataModel ref="MTU"/>
			</Action>
			<Action type="output">
				<DataModel ref="UDPHeader"/>
			</Action>
		</State>
	</StateModel>

	<Test name="Default">
		<!-- The order of agents has importance -->
		<Agent ref="CommonAgents:Local"/>
		<Agent ref="CommonAgents:Remote"/>
		<Publisher class="Remote">
			<Param name="Agent" value="Remote"/>
			<Param name="Class" value="RawV4"/>
			<Param name="Host" value="##TargetIPv4##"/>
			<Param name="Interface" value="##SourceIPv4##"/>
			<Param name="Protocol" value="17"/>
		</Publisher>
		<StateModel ref="TheState"/>
		<Strategy class="##Strategy##"/>
		<Logger class="logger.Filesystem">
			<Param name="Path" value="##LoggerPath##"/>
		</Logger>
	</Test>

	<Test name="MtuFuzz">
		<StateModel ref="MtuFuzzStates"/>
		<!-- The order of agents has importance -->
		<Agent ref="CommonAgents:Local"/>
		<Agent ref="CommonAgents:Remote"/>
		<Publisher class="Remote">
			<Param name="Agent" value="Remote"/>
			<Param name="Class" value="RawV4"/>
			<Param name="Host" value="##TargetIPv4##"/>
			<Param name="Interface" value="##SourceIPv4##"/>
			<Param name="Protocol" value="17"/>
		</Publisher>
		<Strategy class="##Strategy##"/>
		<Logger class="logger.Filesystem">
			<Param name="Path" value="##LoggerPath##"/>
		</Logger>
	</Test>

</Peach>
<!-- end -->
