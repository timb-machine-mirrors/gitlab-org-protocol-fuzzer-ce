<?xml version="1.0" encoding="utf-8"?>
<PitDefines>
  <All>
    <Define key="RemoteAgentIP" value="192.0.2.42"/>
    <Define key="TargetIPv4" value="198.51.100.184"/>
    <Define key="LoggerPath" value="logs/udp/"/>
    <Define key="SourceIPv4" value="198.51.100.10"/>
    <Define key="Strategy"  value="Sequential"/>
    <Define key="Path" value="."/>
