<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://peachfuzzer.com/2012/Peach ../peach.xsd"
        author="Deja Vu Security, LLC" description="Routing Information Protocol v2 DataModels" version="0.0.2">
  <!-- Copyright (c) Deja Vu Security, LLC 2013 -->
  <!--RFC1058: Implements all features-->

  <DataModel name="Packet">
    <Block name="Header">
		<Number name="Command" size="8" value="2"  />
		<Number name="Version" size="8" value="2" token="true" />
		<Number name="Mustbezero" size="16" token="true" /> 

    </Block>
    <Choice name="Payload">
      <Block name="Auth"  >
	
      </Block>
	
      <Block name="RIPv2Payload" minOccurs="1" maxOccurs="25" >
		<Number name="FamilyID" size="16" value="00 02" valueType="hex" token="true" />
		<Number name="Mustbezero1" size="16"  />
				
		<Number name="IP" size="32" value="C0A82A01"  valueType="hex"  />
		<Number name="Subnetmask"  size="32" value="FFFFFF00"  valueType="hex"  />
		<Number name="NextHop" size="32" value="C0A82A08" valueType="hex" />

		<!-- <Blob valueType="literal" value="socket.inet_aton('##IPv4##')" size="32" />
		<Blob valueType="literal" value="socket.inet_aton('##Subnetmask##')" size="32" />
		<Blob valueType="literal" value="socket.inet_aton('##NextHop##')" size="32" /> -->
		<Number name="Metricfill" size="24"   /> 
		<Number name="Metric" size="8" value="5"  /> 
      </Block>
    </Choice>
  </DataModel>
</Peach>
<!-- end -->