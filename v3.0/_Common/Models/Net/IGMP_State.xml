<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://peachfuzzer.com/2012/Peach ../peach.xsd"  
       author="Deja Vu Security, LLC" description="Internet Group Message Protocol PIT StateModels" version="0.0.2">
  <!-- Copyright (c) Deja Vu Security, LLC 2013 -->

  <Include ns="IGMP" src="file:##Path##/_Common/Models/Net/IGMP_Data.xml"/>
  
  <StateModel name="Transmit" initialState="Initial">
    <State name="Initial">
      <Action name="GeneralQuery" type="output">
        <DataModel ref="IGMP:MembershipQuery"/>
      </Action>
      <Action name="GroupSpecificQuery" type="output">
        <DataModel ref="IGMP:MembershipQuery"/>
        <Data>
          <Field name="GroupAddress" valueType="hex" value="E0000002"/>
        </Data>
      </Action>
      <Action name="GroupandSourceSpecificQuery" type="output">
        <DataModel ref="IGMP:MembershipQuery"/>
        <Data>
          <Field name="GroupAddress" valueType="hex" value="E0000002"/>
          <Field name="SourceAddresses[0].SourceAddress" valueType="hex" value="7F000001"/>
        </Data>
      </Action>
      
      <Action type="output">
        <DataModel ref="IGMP:Ver3MembershipReport"/>
      </Action>
    </State>
  </StateModel>
</Peach>
<!-- end -->
