<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://peachfuzzer.com/2012/Peach /peach/peach.xsd"
       author="Deja Vu Security, LLC" description="Link Layer Discovery Protocol PIT StateModels" version="0.0.2">
  <!-- Copyright (c) Deja Vu Security, LLC 2013 -->
	
	<Include ns="Ethernet" src="file:##Path##/_Common/Models/Net/Ethernet_Data.xml"/>
	<Include ns="LLDP" src="file:##Path##/_Common/Models/Net/LLDP_Data.xml"/>

		<DataModel name="LLDPPacket" ref="Ethernet:Frame">
      <Blob name="Dest" mutable="false" valueType="hex" value="000000000000"/> <!-- LLDP multicast address --> 
      <Blob name="TypeOrLen" mutable="false" valueType="hex" value="88cc"/>
			<Block name="Payload" >
				<Block name="LLDP" ref="LLDP:Packet" />
			</Block>
		</DataModel>

	
	<!-- LLDP Simple State Model -->
  <StateModel name="Announce" initialState="Initial">
    <State name="Initial">
      <Action name="LldpSendPacket" type="output">
        <!--Action name="ViewPacket" type="output" publisher="HexHandler"-->
				<DataModel ref="LLDPPacket"/>
      </Action>
    </State>
  </StateModel>
</Peach>
<!--End-->
