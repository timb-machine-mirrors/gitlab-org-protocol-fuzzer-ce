<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://peachfuzzer.com/2012/Peach /peach/peach.xsd"  
       author="Deja Vu Security, LLC" description="Avi Divx PIT StateModels" version="0.0.2">
  <!-- Copyright (c) Deja Vu Security, LLC 2013 -->
	
	<Include ns="DataModels" src="file:##Path##/_Common/Models/Video/avi_divx_Data.xml"/>
	
	<StateModel name="TheState" initialState="Initial">
		<State name="Initial">
			
			<!-- Write out our avi file -->
			<Action type="output">
				<DataModel ref="DataModels:AVI"/>
				<!-- This is our sample file to read in -->
				<Data fileName="##Path##/_Common/Samples/Video/##Seed##"/>
			</Action>
			
			<Action type="close"/>
			
			<!-- Launch the target process -->
			<Action type="call" method="LaunchMplayer" publisher="Peach.Agent" />
		</State>
	</StateModel>
</Peach>
<!--END-->