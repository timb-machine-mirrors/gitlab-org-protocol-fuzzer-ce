
<PitDefines>
	<Include include="./Net/UDPv4.xml.config"/>
	<Include include="./Net/UDPv6.xml.config"/>
	
	<All>
		<Define key="RemoteAgentIP" value="192.168.128.130"/>
    <Define key="LoggerPath"  value="./logs/ipsec/"/> 
    <Define key="SourceMAC" value="6805ca0589fe" />
    <Define key="TargetMAC" value="000000000000"/>
		<Define key="Mode" value="Transport"/>
		<Define key="DestMAC" value="f0def113b69d" /> 
		<Define key="Strategy" value="Random"/>
		<Define key="TargetIPv4" value="127.0.0.1"/>
		<Define key="SourceIPv4" value="127.0.0.1"/>
		<Define key="TargetIPv6" value="::1"/>
		<Define key="SourceIPv6" value="::1"/>
		<Define key="EncryptionAlg" value="Aes128"/>
		<Define key="CryptoKey" value="41414141414141414141414141414141"/>
		<Define key="IV" value="baae9ef59ff1ee56211769bd91da50ed"/> <!--AES128 IV sample baae9ef59ff1ee56211769bd91da50ed--> <!--3Des IV sample aeaeaeaeaeaeaeae"/>-->
		<Define key="HashAlg" value="HMACSHA1"/>
		<Define key="AuthKey" value="4141414141414141414141414141414141414141"/>
		<Define key="TargetPort" value="1234"/>
		<Define key="Path" value="."/>
	</All>
		
	<Linux platform="linux">
		<Define key="Interface" value="eth0"/>
		<Define key="tsharkInterface" value="eth0"/>
		<Define key="tsharkBin" value="/usr/bin/tshark"/>
	</Linux>
	<OSX platform="osx">
		<Define key="Interface" value="em0"/>
		<Define key="tsharkInterface" value="em0"/>
		<Define key="tsharkBin" value="/usr/local/bin/tshark"/> <!-- fix depending on actual install location -->
	</OSX>
	<Windows platform="windows">
		<!-- This can't run on windows anyway because it uses the RawEther publisher. -->
		<!-- Platform independance is added as an example. -->
		<Define key="Interface" value="Local Area Connection"/>
		<Define key="tsharkInterface" value="2"/>
		<Define key="tsharkBin" value="C:\Program Files\Wireshark\tshark.exe"/>
	</Windows>

</PitDefines>
