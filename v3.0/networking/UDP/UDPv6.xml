<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://phed.org/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://phed.org/2012/Peach /peach/peach.xsd"  
       author="Deja Vu Security, LLC" description="User Datagram Protocol PIT" version="0.0.2">
  <DataModel name="UDPv6Header">
    <Number name="SrcPort" size="16" endian="network"/>
    <Number name="DestPort" size="16" endian="network"/>
    <Number name="Length" size="16" endian="network">
      <Relation type="size" of="UDPHeader" endian="network"/>
    </Number>
    <Number name="Checksum" size="16" >
		<Fixup class="UDPChecksumFixup">
			<Param name="ref" value="UDPHeader" />
			<Param name="src" value="##Interface##" />
			<Param name="dst" value="##UdpHost##" />
		</Fixup>
	</Number>
    <Blob name="Data" value="aeaeaeaeaeaeaeaeaeaeaeaeaeaeaeaeaea"/>
  </DataModel>

  <StateModel name="TheState" initialState="Initial">
    <State name="Initial">
      <Action type="output">
        <DataModel ref="UDPv6Header"/>
      </Action>
    </State>
  </StateModel>

  <Test name="Default">
    <StateModel ref="TheState"/>
    <Publisher class="RawV6">
		<Param name="Host" value="##UdpHost##"/>
		<Param name="Interface" value="##Interface##"/>
		<Param name="Protocol" value="17"/>
    </Publisher>
	
	<Logger class="logger.Filesystem" >
		<Param name="Path" value="##LoggerPath##" />
    </Logger>
  </Test>
</Peach>
<!-- end -->
