  <!-- #################### Agents #################### -->
  <Agent name="RemoteAgent" location="tcp://##RemoteAgentIP##:9001">
    <Monitor class="Process">
      <Param name="Executable" value="##tsharkBin##" />
      <Param name="Arguments" value="-i ##tsharkInterface##" />
      <Param name="FaultOnEarlyExit" value="true" />
    </Monitor>
    <Monitor class="Pcap">
      <Param name="Device" value="##Interface##" />
    </Monitor>
  </Agent>

  <!-- #################### State Models #################### -->
  <StateModel name="TheState" initialState="Initial">
    <State name="Initial">
      <Action type="output">
				<DataModel ref="IPv6ICMPPacket"/>
      </Action>
      <Action type="output">
				<DataModel ref="IPv6EmptyPacket"/>
      </Action>
      <Action type="output">
				<DataModel ref="IPv6HopByHopPacket"/>
      </Action>
			<Action type="output">
				<DataModel ref="IPv6FragmentPacket1"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6FragmentPacket2"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6FragmentPacket3"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6MobileBRRPacket"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6MobileHoTIPacket"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6MobileCoTIPacket"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6MobileHoTPacket"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6MobileCoTPacket"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6MobileBUPacket"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6MobileBAPacket"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6MobileBEPacket"/>
