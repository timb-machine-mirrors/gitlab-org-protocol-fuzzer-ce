  <!-- Requires Linux Peach for Raw publishing --> 
  
  <!-- IPv6 DataModels -->

	<!-- #################### Header Templates #################### -->	
  <DataModel name="IPv6Ethernet">
    <Block name="EtherHeader">
      <Blob name="Dest" valueType="hex" mutable="false" value="##TargetMAC##"/>
      <Blob name="Src" valueType="hex" mutable="false" value="##SourceMAC##"/>
      <Blob name="Type" token="true" mutable="false" valueType="hex" value="86dd"/>
    </Block>
  </DataModel>

  <DataModel name="IPv6Header">
    <Block name="Header">
      <Flags size="32" endian="big">
        <Flag name="Version" position="0" size="4" valueType="hex" value="6"/>
				<Flag name="DSCP" position="4" size="6" valueType="hex" value="00"/>
        <Flag name="ECN" position="10" size="2" valueType="hex" value="00"/>
				<Flag name="FlowLabel" position="12" size="20" valueType="hex" value="000000"/>
      </Flags>
      <Number name="PayloadLength" size="16" endian="big" valueType="hex" value="ffff"/>
      <Number name="NextHeader" size="8" endian="big" value="59"/>
      <Number name="HopLimit" size="8" endian="big" valueType="hex" value="40"/> 
      <Blob name="SrcIP" value="##SourceIPv6##">
				<Transformer class="Ipv6StringToOctet"/>
      </Blob>
      <Blob name="DestIP" value="##TargetIPv6##">
				<Transformer class="Ipv6StringToOctet"/>
      </Blob>
    </Block>
  </DataModel>

	<DataModel name="TLV">
		<Number name="Type" size="8" endian="big"/>
		<Number name="Length" size="8"/>
		<Block name="Value"/>
	</DataModel>

	<DataModel name="HopByHop">
		<Block name="HopByHopContents">
			<Number name="NextHeader" size="8" value="59"/>
			<Number name="PayloadLength" value="0" size="8"> 
				<Relation type="size" of="HopByHopContents" 
									expressionSet="((((((size-8)/8) > 0) and (size-8)/8)) or 0) + int(bool(size % 8))"
									expressionGet="((size+1)*8)"
									/> <!-- this is length in 8-octet units -->
			</Number>
			<!-- look at this more -->
			<Block name="TLVs">
				<Number name="test" value="0" size="8" endian="big" minOccurs="8"/>
				<!-- <Number name="test2" value="0" size="8" endian="big" minOccurs="1"/> -->

				<!-- size relation with padding -->
				<!-- <Block ref="TLV" minOccurs="0" maxOccurs="255"> -->
				<!-- 	<Number name="Type" value="1"/> -->
				<!-- 	<Block name="Value"> -->
				<!-- 		<Number name="Type" value="1" size="16" endian="big"/> -->
				<!-- 		<Blob valueType="hex" value="00"/> -->
				<!-- 	</Block> -->
				<!-- </Block> -->
				<Block name="Padding" minOccurs="1">
					<Number name="Type" size="8" value="1"/>
					<Number name="Length" size="8" value="0">
						<Relation type="size" of="PaddingValue"/>
					</Number>
				</Block>
			</Block>
			<Padding name="PaddingValue" aligned="true" alignment="64" alignedTo="HopByHopContents"/>
		</Block>
	</DataModel>
	
	<DataModel name="Fragment">
		<Number name="NextHeader" size="8" value="59" endian="big"/>
		<Number name="Reserved" size="8" endian="big"/>
		<Flags name="Flags" endian="big">
			<Flag name="Offset" size="13" position="0"/>
			<Flag name="Res" size="2" position="13"/>
			<Flag name="Mflag" size="1" position="15"/>
		</Flags>
		<Number name="Identification" size="32" endian="big"/>
	</DataModel>
	
	<DataModel name="Mobile">
		<Number name="NextHeader" size="8" value="59" endian="big"/>
		<Number name="HeaderLen" size="8" endian="big">
			<Relation type="size" of="Mobile"/>
		</Number>
		<Number name="MH" size="8" endian="big"/>
		<Number name="Reserved" size="8" endian="big"/>
		<Number name="Checksum" size="16" endian="big">
			<Fixup class="">
				<!--TODO-->
			</Fixup>
		</Number>
	</DataModel>


	<!-- #################### Packet Definitions #################### -->	
	<DataModel name="IPv6EmptyPacket">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.NextHeader" value="59"/>
			<Number name="Header.PayloadLength" value="0" size="16"/>
		</Block>
	</DataModel>

	<DataModel name="IPv6ICMPPacket">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload" />
			</Number>
			<Number name="Header.NextHeader" value="58"/>
		</Block>
    <Blob name="Payload" valueType="hex" value="800014350a440001617bef50000000004e6a030000000000101112131415161718191a1b1c1d1e1f202122232425262728292a2b2c2d2e2f3031323334353637"/>
	</DataModel>


	<DataModel name="IPv6HopByHopPacket">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload" />
			</Number>
			<Number name="Header.NextHeader" value="0"/>
		</Block>
		<Block name="Payload">
			<Block ref="HopByHop">
			</Block>
		</Block>
	</DataModel>
	
	<DataModel name="IPv6FragmentPacket1">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload"/>
			</Number>
			<Number name="Header.NextHeader" value="44"/>
		</Block>
		<Block name="Payload">
			<Block ref="Fragment">
				<Flags name="Flags" endian="big">
					<Flag name="Offset" size="13" position="0" value="0"/>
					<Flag name="Res" size="2" position="13"/>
					<Flag name="Mflag" size="1" position="15" value="1"/>
				</Flags>
				<Number name="Identification" size="32" endian="big" value="374625"/>
			</Block>
			<Blob name="Data" size="96"/>
		</Block>			
	</DataModel>
	
	<DataModel name="IPv6FragmentPacket2">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload"/>
			</Number>
			<Number name="Header.NextHeader" value="44"/>
		</Block>
		<Block name="Payload">
			<Block ref="Fragment">
				<Flags name="Flags" endian="big">
					<Flag name="Offset" size="13" position="0" value="12"/>
					<Flag name="Res" size="2" position="13"/>
					<Flag name="Mflag" size="1" position="15" value="1"/>
				</Flags>
				<Number name="Identification" size="32" endian="big" value="374625"/>
			</Block>
			<Blob name="Data" size="96"/>
		</Block>			
	</DataModel>
	
	<DataModel name="IPv6FragmentPacket3">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload"/>
			</Number>
			<Number name="Header.NextHeader" value="44"/>
		</Block>
		<Block name="Payload">
			<Block ref="Fragment">
				<Flags name="Flags" endian="big">
					<Flag name="Offset" size="13" position="0" value="24"/>
					<Flag name="Res" size="2" position="13"/>
					<Flag name="Mflag" size="1" position="15" value="0"/>
				</Flags>
				<Number name="Identification" size="32" endian="big" value="374625"/>
			</Block>
			<Blob name="Data" size="96"/>
		</Block>			
	</DataModel>

	<DataModel name="IPv6MobileBRR">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload"/> <!--THIS IS THE WEIRD PADDING IF NO OPTIONS SET 0-->
			</Number>
			<Number name="Header.NextHeader" value="135"/>
		</Block>
		<Block name="Payload">
			<Block ref="Mobile">
				<Number name="MH" size="8" endian="big" value="0"/>
			</Block>
			<Number name="Reserved" size="16"/>
			<Block name="MobilityOptions">
				<!--TODO TLV-Encoded optional options-->
			</Block>
		</Block>			
	</DataModel>
	
	<DataModel name="IPv6MobileHoTI">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload"/> <!--THIS IS THE WEIRD PADDING IF NO OPTIONS SET 1-->
			</Number>
			<Number name="Header.NextHeader" value="135"/>
		</Block>
		<Block name="Payload">
			<Block ref="Mobile">
				<Number name="MH" size="8" endian="big" value="1"/>
			</Block>
			<Number name="Reserved" size="16"/>
			<Number name="HomeInitCookie" size="64"/> <!--LOOK INTO COOKIE-->
			<Block name="MobilityOptions">
				<!--TODO TLV-Encoded optional options-->
			</Block>
		</Block>			
	</DataModel>
	
	<DataModel name="IPv6MobileCoTI">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload"/> <!--THIS IS THE WEIRD PADDING IF NO OPTIONS SET 1-->
			</Number>
			<Number name="Header.NextHeader" value="135"/>
		</Block>
		<Block name="Payload">
			<Block ref="Mobile">
				<Number name="MH" size="8" endian="big" value="2"/>
			</Block>
			<Number name="Reserved" size="16"/>
			<Number name="CareInitCookie" size="64"/> <!--LOOK INTO COOKIE-->
			<Block name="MobilityOptions">
				<!--TODO TLV-Encoded optional options-->
			</Block>
		</Block>			
	</DataModel>
	
	<DataModel name="IPv6MobileHoT">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload"/> <!--THIS IS THE WEIRD PADDING IF NO OPTIONS SET 2-->
			</Number>
			<Number name="Header.NextHeader" value="135"/>
		</Block>
		<Block name="Payload">
			<Block ref="Mobile">
				<Number name="MH" size="8" endian="big" value="3"/>
			</Block>
			<Number name="HomeNonceIndex" size="16"/>
			<Number name="HomeInitCookie" size="64"/> <!--LOOK INTO COOKIE-->
			<Number name="HomeKeygenToken" size="64"/> <!--LOOK INTO Token-->
			<Block name="MobilityOptions">
				<!--TODO TLV-Encoded optional options-->
			</Block>
		</Block>			
	</DataModel>
	
	<DataModel name="IPv6MobileCoT">
		<Block ref="IPv6Ethernet"/>
		<Block ref="IPv6Header">
			<Number name="Header.PayloadLength" size="16" endian="big">
				<Relation type="size" of="Payload"/> <!--THIS IS THE WEIRD PADDING IF NO OPTIONS SET 2-->
			</Number>
			<Number name="Header.NextHeader" value="135"/>
		</Block>
		<Block name="Payload">
			<Block ref="Mobile">
				<Number name="MH" size="8" endian="big" value="3"/>
			</Block>
			<Number name="CareNonceIndex" size="16"/>
			<Number name="CareInitCookie" size="64"/> <!--LOOK INTO COOKIE-->
			<Number name="CareKeygenToken" size="64"/> <!--LOOK INTO Token-->
			<Block name="MobilityOptions">
				<!--TODO TLV-Encoded optional options-->
			</Block>
		</Block>			
	</DataModel>

  <!-- #################### Agents #################### -->
  <Agent name="RemoteAgent" location="tcp://##RemoteAgentIP##:9001">
    <Monitor class="Process">
      <Param name="Executable" value="##tsharkBin##" />
      <Param name="Arguments" value="-i ##tsharkInterface##" />
      <Param name="FaultOnEarlyExit" value="true" />
    </Monitor>
    <Monitor class="Pcap">
      <Param name="Device" value="##Interface##" />
    </Monitor>
  </Agent>

  <!-- #################### State Models #################### -->
  <StateModel name="TheState" initialState="Initial">
    <State name="Initial">
      <Action type="output">
				<DataModel ref="IPv6ICMPPacket"/>
      </Action>
      <Action type="output">
				<DataModel ref="IPv6EmptyPacket"/>
      </Action>
      <Action type="output">
				<DataModel ref="IPv6HopByHopPacket"/>
      </Action>
			<Action type="output">
				<DataModel ref="IPv6FragmentPacket1"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6FragmentPacket2"/>
			</Action>
			<Action type="output">
				<DataModel ref="IPv6FragmentPacket3"/>
			</Action>
    </State>
  </StateModel>

  <!-- ####################### Tests ######################## -->
  <Test name="Default">
    <!-- <Agent ref="RemoteAgent"/> -->
    <StateModel ref="TheState"/>
    <Publisher class="RawEther">
      <Param name="Interface" value="##Interface##"/>
      <Param name="Protocol" value="ETH_P_IPV6"/>
    </Publisher>
    <Strategy class="##Strategy##"/>
    <Logger class="logger.Filesystem" >
      <Param name="Path" value="##LoggerPath##" />
    </Logger>
  </Test>
</Peach>
