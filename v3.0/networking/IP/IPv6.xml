<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://peachfuzzer.com/2012/Peach /peach/peach.xsd"  
       author="Deja Vu Security, LLC" description="Internet Protocol Version 6 PIT" version="0.0.2">

  <DataModel name="IPv6Address">
	<Blob name="AddressValue" size="16" valueType="hex" endian="big"
		value="00 00 00 00 00 00 00 00 00 00 00 00 00 00 00 01"/>
  </DataModel>
	   
  <DataModel name="IPv6Header">
    <Block name="Header">
      <Flags size="32" endian="big">
        <Flag name="Version" position="0" size="4" valueType="hex" value="6"/>
	<Flag name="DSCP" position="4" size="6" valueType="hex" value="00"/>
        <Flag name="ECN" position="10" size="2" valueType="hex" value="00"/>
	<Flag name="FlowLabel" position="12" size="20" valueType="hex" value="000000"/>
      </Flags>
      <Number name="PayloadLength" size="16" endian="big" valueType="hex">
        <Relation type="size" of="Payload"/>
      </Number>
      <Number name="NextHeader" size="8" endian="big" value="58"/>
      <Number name="HopLimit" size="8" endian="big" valueType="hex" value="40"/> 
      <!--<Blob name="SrcIP" size="16" endian="big" valueType="hex" value="fe 80 00 00 00 00 00 00 80 7e 65 c1 cc 32 14 ff"/>
      <Blob name="DestIP" size="16" endian="big" valueType="hex" value="fe 80 00 00 00 00 00 00 02 0c 29 ff fe ef 2a 1b"/>-->
      <Block ref="IPv6Address" />
      <Block ref="IPv6Address" />
    </Block>
    <Block minOccurs="0" maxOccurs="3" name="ExtensionHeaders">
      <!--TODO-->
    </Block>
    <Blob name="Payload" valueType="hex" value="800014350a440001617bef50000000004e6a030000000000101112131415161718191a1b1c1d1e1f202122232425262728292a2b2c2d2e2f3031323334353637"/>
  </DataModel>

  <DataModel name="IPv6Ethernet">
	<Block name="EtherHeader">
		<Blob name="Dest" valueType="hex" mutable="false" value="##DestinationMAC##"/>
		<Blob name="Src" valueType="hex" mutable="false" value="##SourceMAC##"/>
		<Blob name="Type" token="true" valueType="hex" value="86dd"/>
	</Block>
    <Block ref="IPv6Header"/>
  </DataModel>	   

  <StateModel name="TheState" initialState="Initial">
    <State name="Initial">
      <Action type="output">
        <DataModel ref="IPv6Ethernet"/>
      </Action>
    </State>
  </StateModel>

  <Test name="Default">
    <StateModel ref="TheState"/>
    <!--<Publisher class="file.FileWriter">
      <Param name="fileName" value="out.txt"/>
    </Publisher>-->
    <!--<Publisher class="RawIPv6">
      <Param name="Host" value="##Target##"/>
      <Param name="Interface" value="##Source##"/>
      <Param name="Protocol" value="58"/>
    </Publisher>-->
    <Publisher class="RawEther">
	<Param name="Interface" value="##Interface##"/>
	<Param name="Protocol" value="ETH_P_IPV6"/>
    </Publisher>
    <Logger class="logger.Filesystem" >
	<Param name="Path" value="##LoggerPath##" />
    </Logger>
	
  </Test>
  
</Peach>
<!-- end -->
