#!/usr/bin/env python

bld(
	features = 'asciidoc',
	source = bld.path.ant_glob('src/**/*.txt'),
	conf = bld.path.find_resource('website.conf'),
	path = bld.path.find_dir('src'),
	name='website',
	install_path='${DOCDIR}/website/',
	relative_trick = True,
)

bld(
	features = 'asciidoc',
	install=bld.path.ant_glob('css/**/*'),
	install_path='${DOCDIR}/website/',
)
