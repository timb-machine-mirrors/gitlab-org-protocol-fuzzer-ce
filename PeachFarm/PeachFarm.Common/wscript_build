#!/usr/bin/env python

deps = [
	'System.dll',
	'System.Core.dll',
	'System.Data.dll',
	'System.Xml.dll',
	'RabbitMQ.Client.dll',
	'MongoDB.Driver.dll',
	'MongoDB.Bson.dll',
	'MySql.Data.dll',
	'System.Runtime.Serialization.dll'
]

bld(
	features = 'cs',
	use = deps,
	source = bld.path.ant_glob('**/*.cs'),
	name = 'PeachFarm.Common.dll',
	ide_path = '../Peach Farm',

	# xsd2code generated classes have warnings in them
	# http://xsd2code.codeplex.com/workitem/10041
	# http://xsd2code.codeplex.com/discussions/73398
	csflags = [ '/nowarn:0114,0108'],
)
