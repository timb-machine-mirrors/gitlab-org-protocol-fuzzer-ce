#!/usr/bin/env python

subdirs = [
	'TotalPhase-5.13',
	'Managed.AndroidDebugBridge',
]

bld.recurse(subdirs)

bld.read_nuget('packages.config')

bld.read_csshlib('EasyHook.dll', paths=['EasyHook-2.6'])

bld.read_csshlib('Telerik.Reporting.dll', paths=['Telerik Reporting Q3 2013/Bin'])

bld.read_csshlib('Telerik.Web.Design.dll',   paths=['RadControls for ASP.NET AJAX Q3 2013/Bin40'])
bld.read_csshlib('Telerik.Web.UI.dll',       paths=['RadControls for ASP.NET AJAX Q3 2013/Bin40'])
bld.read_csshlib('Telerik.Web.UI.Skins.dll', paths=['RadControls for ASP.NET AJAX Q3 2013/Bin40'])

bld.read_csshlib('Telerik.Windows.Controls.dll',            paths=['RadControls for WPF Q3 2012/Binaries/WPF40'])
bld.read_csshlib('Telerik.Windows.Controls.Data.dll',       paths=['RadControls for WPF Q3 2012/Binaries/WPF40'])
bld.read_csshlib('Telerik.Windows.Controls.Input.dll',      paths=['RadControls for WPF Q3 2012/Binaries/WPF40'])
bld.read_csshlib('Telerik.Windows.Controls.Navigation.dll', paths=['RadControls for WPF Q3 2012/Binaries/WPF40'])
bld.read_csshlib('Telerik.Windows.Data.dll',                paths=['RadControls for WPF Q3 2012/Binaries/WPF40'])

bld.read_csshlib('ActiproSoftware.Docking.Wpf.dll',                    paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.Navigation.Wpf.dll',                 paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.PropertyGrid.Wpf.dll',               paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.Shared.Wpf.dll',                     paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.SyntaxEditor.Addons.DotNet.Wpf.dll', paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.SyntaxEditor.Addons.Xml.Wpf.dll',    paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.SyntaxEditor.Wpf.dll',               paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.Text.Addons.DotNet.Wpf.dll',         paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.Text.Addons.Xml.Wpf.dll',            paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.Text.LLParser.Wpf.dll',              paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.Text.Wpf.dll',                       paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.Views.Wpf.dll',                      paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])
bld.read_csshlib('ActiproSoftware.Wizard.Wpf.dll',                     paths=['Actipro-WPF-Controls-12.2.0570/Assemblies'])

if bld.env.TARGET == 'win':
	# Use binary dist of sqlite on windows
	bld.read_csshlib('System.Data.SQLite.dll',                  paths=['sqlite-netFx40-static-binary-2010-1.0.88.0'])
	#bld.read_csshlib('System.Data.SQLite.Linq.dll',             paths=['sqlite-netFx40-static-binary-2010-1.0.88.0'])

	# Install the x86/x64 sql interop dll
	bld.read_shlib('SQLite.Interop', paths=['sqlite-netFx40-static-binary-2010-1.0.88.0/%s' % bld.env.SUBARCH])
else:
	# Build sqlite from source on linux
	bld.recurse('sqlite-netFx-source-1.0.89.0')

