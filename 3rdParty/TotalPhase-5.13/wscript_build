#!/usr/bin/env python

subdir = bld.path.find_dir(bld.env['BASENAME']) or bld.path

bld(
	features = 'cs',
	use = [ 'System.dll', ],
	source = 'aardvark.cs',
	name = 'aardvark_net.dll',
	namespace = 'aardvark',
	install_755 = { subdir : subdir.ant_glob('**/*') },
	version = False,
	csdoc = False,
)
