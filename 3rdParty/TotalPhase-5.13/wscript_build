#!/usr/bin/env python

from waflib import Utils

# Only do this if environment supports C#
if 'cs' in bld.env['supported_features']:

	# win_x86 or win_64
	base = bld.env['BASENAME']

	if base in bld.path.listdir():
		bld.read_csshlib('aardvark_net.dll', paths=[ base ])
		bld.install_files('${BINDIR}', '%s/aardvark.dll' % base, chmod=Utils.O755)
