<Peach xmlns="http://peachfuzzer.com/2012/Peach"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://peachfuzzer.com/2012/Peach peach.xsd"  
       author="Deja Vu Security, LLC"
 description="Transport Control Protocol PIT DataModels" version="0.0.2">
	
	<Include ns="IPv4" src="file:##PitLibraryPath##/_Common/Models/Net/IPv4_Data.xml"/>
	<Include ns="TCP" src="file:##PitLibraryPath##/_Common/Models/Net/TCP_Data.xml"/>

	<DataModel name="Packet" ref="TCP:Packet">
		<Number name="Header.CheckSum" size="16" endian="big">
			<Fixup class="TCPChecksumFixup">
					<Param name="ref" value="Packet" />
					<Param name="src" value="##SourceIPv4##" />
					<Param name="dst" value="##TargetIPv4##" />
				</Fixup>
		</Number>
	</DataModel>

	<DataModel name="PacketWithData" ref="Packet">
		<Blob name="TcpPayload" value="this is a packet.\n"/>
	</DataModel>

	<DataModel name="InIPv4Packet" ref="IPv4:Packet">
		<Number name="Header.Protocol" size="8" endian="big" valueType="hex" value="06" token="true"/>
		<Block name="Payload" ref="Packet">
			<!--<Block name="Header.OptionsAndPadding" /> -->
		</Block>
	</DataModel>
	
	<DataModel name="InIPv4PacketOrNone">
		<Choice name="PacketOrNone">
			<Block name="InIPv4Packet" ref="IPv4:Packet">
				<Number name="Header.Protocol" size="8" endian="big" valueType="hex" value="06" token="true"/>
				<Block name="Payload" ref="TCP:Packet">
					<!--<Block name="Header.OptionsAndPadding" /> -->
				</Block>
			</Block>
			
			<Block name="None" />
		</Choice>
	</DataModel>
</Peach>
