<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://peachfuzzer.com/2012/Peach ../peach.xsd" 
       author="Deja Vu Security, LLC" description="Multicast Listener Discovery PIT StateModels" version="0.0.2">
  <!-- Copyright (c) Deja Vu Security, LLC 2013 -->

  <Include ns="MLD" src="file:##PitLibraryPath##/_Common/Models/Net/MLD_Data.xml"/>

  <StateModel name="Transmit" initialState="Initial">
    <State name="Initial">
      <Action name="GeneralQuery" type="output">
        <DataModel ref="MLD:Query"/>
      </Action>
      <Action name="GroupSpecificQuery" type="output">
        <DataModel ref="MLD:Query"/>
        <Data>
          <Field name="MulticastAddress" valueType="hex" value="FF00 0000 0000 0000 0000 0000 0000 0002"/>
        </Data>
      </Action>
      <Action name="GroupandSourceSpecificQuery" type="output">
        <DataModel ref="MLD:Query"/>
        <Data>
          <Field name="MulticastAddress" valueType="hex" value="FF00 0000 0000 0000 0000 0000 0000 0002"/>
          <Field name="SourceAddresses[0].SourceAddress" valueType="hex" value="0000 0000 0000 0000 0000 0000 0000 0001"/>
        </Data>
      </Action>
      
      
      <Action type="output">
        <DataModel ref="MLD:Ver2Report"/>
      </Action>
    </State>
  </StateModel>
</Peach>
