<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://peachfuzzer.com/2012/Peach ../peach.xsd"
       author="Deja Vu Security, LLC" description="Internet Control Message Protocol Version 6 PIT StateModels" version="0.0.2">
  <!-- Copyright (c) Deja Vu Security, LLC 2013 -->

  <Include ns="ICMPv6" src="file:##PitLibraryPath##/_Common/Models/Net/ICMPv6_Data.xml"/>
  <Include ns="IPv6" src="file:##PitLibraryPath##/_Common/Models/Net/IPv6_Data.xml"/>


  <DataModel name="IPv6inDestinationUnreachable" ref="ICMPv6:DestinationUnreachable">
    <Block name="Content.Payload.Data" ref="IPv6:IPv6Header" />
  </DataModel>

  <DataModel name="IPv6inPacketTooBig" ref="ICMPv6:PacketTooBig">
    <Block name="Content.Payload.Data" ref="IPv6:IPv6Header" />
  </DataModel>

  <DataModel name="IPv6inTimeExceeded" ref="ICMPv6:TimeExceeded">
    <Block name="Content.Payload.Data" ref="IPv6:IPv6Header" />
  </DataModel>

  <DataModel name="IPv6inParameterProblem" ref="ICMPv6:ParameterProblem">
    <Block name="Content.Payload.Data" ref="IPv6:IPv6Header" />
  </DataModel>

  <StateModel name="Echo" initialState="Initial">
    <State name="Initial">

      <Action name="EchoRequest" type="output">
        <DataModel ref="ICMPv6:EchoRequest"/>
      </Action>

      <Action name="EchoReply" type="input">
        <DataModel ref="ICMPv6:EchoReply"/>
      </Action>

    </State>
  </StateModel>

  <StateModel name="NeighborSolicitation" initialState="Initial">
    <State name="Initial">

      <Action name="NeighborSolicitation" type="output">
        <DataModel ref="ICMPv6:NeighborSolicitation"/>
      </Action>

      <Action name="NeighborAdvertisement" type="input">
        <DataModel ref="ICMPv6:NeighborAdvertisement"/>
      </Action>

    </State>
  </StateModel>

  <StateModel name="Transmit" initialState="Initial">
    <State name="Initial">

      <Action name="EchoRequest" type="output">
        <DataModel ref="ICMPv6:EchoRequest"/>
      </Action>

      <Action name="EchoReply" type="output">
        <DataModel ref="ICMPv6:EchoReply"/>
      </Action>

      <Action name="DestinationUnreachable" type="output"><!--Not Displaying on Wireshark?-->
        <DataModel ref="IPv6inDestinationUnreachable" />
      </Action>

      <Action name="PacketTooBig" type="output">
        <DataModel ref="IPv6inPacketTooBig" />
      </Action>

      <Action name="TimeExceeded" type="output">
        <DataModel ref="IPv6inTimeExceeded" />
      </Action>

      <Action name="ParameterProblem" type="output"><!--Not Displaying on Wireshark?-->
        <DataModel ref="IPv6inParameterProblem" />
      </Action>

    </State>
  </StateModel>
</Peach>
<!--END-->
