<Peach xmlns="http://peachfuzzer.com/2012/Peach"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://peachfuzzer.com/2012/Peach peach.xsd"  
       author="Deja Vu Security, LLC"
 description="Multicast Listener Discovery PIT DataModels" version="0.0.2">
  
  <!--Membership Report Sub-unit-->
  <DataModel name="AddressRecord">
    <Number name="RecordType" size="8" endian="big"/>
    <Number name="AuxDataLength" size="8" endian="big">
      <Relation type="size" of="AuxData" />
    </Number>
    <Number name="NumSources" size="16" endian="big">
      <Relation type="count" of="SourceAddresses" />
    </Number>
    <Blob name="MulticastAddress" length="16"/>
    <Block name="SourceAddresses" minOccurs="0">
      <Blob name="SourceAddress" length="16"/>
    </Block>
    <Blob name="AuxData" />
  </DataModel>    
      
      
  <!--RFC3810 Section 5.1-->  
  <DataModel name="Query">
    <Number name="Type" size="8" endian="big" value="130" token="true" />
    <Number name="Code" size="8" endian="big"/>
    <Number name="Checksum" endian="big" size="16">
      <Fixup class="IcmpV6ChecksumFixup">
        <Param name="ref" value="Query"/>
        <Param name="src" value="##SourceIPv6##"/>
        <Param name="dst" value="##TargetIPv6##"/>
      </Fixup>
    </Number>
    <Number name="MaxRespCode" size="16" endian="big"/>
    <Number name="Reserved" size="16" endian="big"/>
    <Blob name="MulticastAddress" length="16"/>
    <Flags size="8" endian="big">
      <Flag name="Resv" size="4" position="0"/>
      <Flag name="Suppress" size="1" position="4"/>
      <Flag name="QRV" size="3" position="5"/>
    </Flags>
    <Number name="QQIC" size="8"/>
    <Number name="NumSources" size="16" endian="big">
      <Relation type="count" of="SourceAddresses" />
    </Number>
    <Block name="SourceAddresses" minOccurs="0">
      <Blob name="SourceAddress" length="16"/>
    </Block>
  </DataModel>
      
  <!--RFC3810 Section 5.2-->  
  <DataModel name="Ver2Report">
    <Number name="Type" size="8" endian="big" value="143" token="true" />
    <Blob name="Resv1" length="1"/>
    <Number name="Checksum" endian="big" size="16">
      <Fixup class="IcmpV6ChecksumFixup">
        <Param name="ref" value="Ver2Report"/>
        <Param name="src" value="##SourceIPv6##"/>
        <Param name="dst" value="##TargetIPv6##"/>
      </Fixup>
    </Number>
    <Blob name="Resv2" length="2"/>
    <Number name="NumAddressRecords" size="16" endian="big">
      <Relation type="count" of="AddressRecords" />
    </Number>
    <Block name="AddressRecords" ref="AddressRecord" minOccurs="0" />
  </DataModel>
</Peach>
<!--End-->