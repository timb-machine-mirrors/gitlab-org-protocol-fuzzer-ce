<Peach xmlns="http://peachfuzzer.com/2012/Peach"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://peachfuzzer.com/2012/Peach peach.xsd"  
       author="Deja Vu Security, LLC"
 description="Adress Resolution Protocol PIT" version="0.0.2">

  <Include ns="Ethernet" src="file:##PitLibraryPath##/_Common/Models/Net/Ethernet_Data.xml"/>
  <Include ns="ARP" src="file:##PitLibraryPath##/_Common/Models/Net/ARP_Data.xml"/>

  <DataModel name="ARPPacket" ref="Ethernet:Frame">
    <Number name="TypeOrLen" token="true" valueType="hex" size="16" value="0806"/>
    <Block name="Payload" ref="ARP:Packet" />
  </DataModel>

  <StateModel name="Request" initialState="Initial">
    <State name="Initial">
      <Action type="call" method="StartIterationEvent" publisher="Peach.Agent" />

      <Action name="Request" type="output">
        <DataModel ref="ARPPacket"/>
        <Data>
          <!--Field name="Dest" valueType="hex" mutable="false" value="ffffffffffff"/--><!--Can't make field immutable-->
          <Field name="Payload.Data.OPER.Request" value=""/>
        </Data>
      </Action>

      <Action type="call" method="ExitIterationEvent" publisher="Peach.Agent" />
    </State>
  </StateModel>

  <StateModel name="Reply" initialState="Initial">
    <State name="Initial">
      <Action type="call" method="StartIterationEvent" publisher="Peach.Agent" />

      <Action name="Request" type="input">
        <DataModel ref="ARPPacket"/>
      </Action>
      <Action type="slurp" valueXpath="//Request/ARPPacket/Payload/Data/TPA" setXpath="//Reply/ARPPacket/Payload/Data/SPA"/>
      <Action type="slurp" valueXpath="//Request/ARPPacket/Payload/Data/SPA" setXpath="//Reply/ARPPacket/Payload/Data/TPA"/>
      <Action type="slurp" valueXpath="//Request/ARPPacket/Payload/Data/THA" setXpath="//Reply/ARPPacket/Payload/Data/SHA"/>
      <Action type="slurp" valueXpath="//Request/ARPPacket/Payload/Data/SHA" setXpath="//Reply/ARPPacket/Payload/Data/THA"/>
      <Action name="Reply" type="output">
        <DataModel ref="ARPPacket"/>
        <Data>
          <Field name="Payload.Data.OPER.Reply" value=""/>
        </Data>
      </Action>

      <Action type="call" method="ExitIterationEvent" publisher="Peach.Agent" />
    </State>
  </StateModel>

</Peach>
