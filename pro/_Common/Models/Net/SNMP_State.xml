<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://peachfuzzer.com/2012/Peach ../peach.xsd"
       author="Deja Vu Security, LLC" description="Simple Network Management Protocol PIT StateModels" version="0.0.2">
  <!-- Copyright (c) Deja Vu Security, LLC 2013 -->

	<Include ns="SNMP" src="file:##PitLibraryPath##/_Common/Models/Net/SNMP_Data.xml"/>
	<PythonPath path="##PitLibraryPath##/_Common/Models/Net/"/>
	<Import import="SNMP"/>

	<!-- Client State Model -->
  <StateModel name="Client" initialState="Initial">
    <State name="Initial">
      <!-- generate snmp get request packet -->
      <Action name="GetRequest" type="output">
        <DataModel ref="SNMP:SnmpGet"/>
      </Action>

      <Action name="GetResponse" type="input">
        <DataModel ref="SNMP:SnmpResponse"/>
      </Action>

      <!-- generate snmp next request packet -->
      <Action name="GetNextRequest" type="output">
        <DataModel ref="SNMP:SnmpNext"/>
      </Action>

      <Action name="GetNextResponse" type="input">
        <DataModel ref="SNMP:SnmpResponse"/>
      </Action>

      <!-- generate snmp bulk request packet -->
      <Action name="GetBulkRequest" type="output">
        <DataModel ref="SNMP:SnmpBulk"/>
      </Action>

      <Action name="GetBulkResponse" type="input">
        <DataModel ref="SNMP:SnmpResponse"/>
      </Action>
    </State>
  </StateModel>

	<!-- Server State Model -->
  <StateModel name="Server" initialState="LaunchClient">
    <State name="LaunchClient">
      <Action type="open"/>

      <Action type="call" method="launchProgram" publisher="Peach.Agent"/>

      <Action type="changeState" ref="ServerStart"/>
		</State>

		<State name="ServerStart">
      <Action name="GetRequest" type="input">
        <DataModel ref="SNMP:SNMPHeaderV2_"/>
      </Action>

			<Action name="ConnHandleSlurp" type="slurp" valueXpath="//GetRequest//RequestId//Value" setXpath="//Response//RequestId"/>
			<Action name="ConnHandleSlurp2" type="slurp" valueXpath="//GetRequest//Community//Value" setXpath="//Response//SnmpCommunity"/>

			<Action name="Response" type="output">
				<DataModel ref="SNMP:SnmpResponse"/>
      </Action>

       <Action type="call" method="exitProgram" publisher="Peach.Agent"/>
    </State>
  </StateModel>
</Peach>
<!--End-->