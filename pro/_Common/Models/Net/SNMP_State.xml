<?xml version="1.0" encoding="utf-8"?>
<Peach xmlns="http://peachfuzzer.com/2012/Peach" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://peachfuzzer.com/2012/Peach ../peach.xsd"
       author="Deja Vu Security, LLC" description="Simple Network Management Protocol PIT StateModels" version="0.0.2">
  <!-- Copyright (c) Deja Vu Security, LLC 2013 -->

	<Include ns="DataModels" src="file:##PitLibraryPath##/_Common/Models/Net/SNMP_Data.xml"/>
	<PythonPath path="##PitLibraryPath##/_Common/Models/Net/"/>
	<Import import="SNMP"/>

	<!-- Client State Model -->
  <StateModel name="ManagerToAgent" initialState="Initial">
    <State name="Initial">
      <!-- generate snmp get request packet -->
      <Action name="SnmpGetRequest" type="output" publisher="UdpHandler">
        <DataModel ref="DataModels:SnmpGet"/>
      </Action>

      <Action name="SnmpResponse1" type="input" publisher="UdpHandler">
        <DataModel ref="DataModels:SnmpResponse"/>
      </Action>

      <!-- generate snmp next request packet -->
      <Action name="SnmpGetNextRequest" type="output" publisher="UdpHandler">
        <DataModel ref="DataModels:SnmpNext"/>
      </Action>

      <Action name="SnmpResponse2" type="input" publisher="UdpHandler">
        <DataModel ref="DataModels:SnmpResponse"/>
      </Action>

      <!-- generate snmp bulk request packet -->
      <Action name="SnmpGetBulkRequest" type="output" publisher="UdpHandler">
        <DataModel ref="DataModels:SnmpBulk"/>
      </Action>

      <Action name="SnmpResponse3" type="input" publisher="UdpHandler">
        <DataModel ref="DataModels:SnmpResponse"/>
      </Action>
    </State>
  </StateModel>

	<!-- Server State Model -->
  <StateModel name="AgentToManager" initialState="LaunchClient">
    <State name="LaunchClient">
      <Action type="open" publisher="UdpHandler"/>

      <Action type="call" method="launchProgram" publisher="Peach.Agent"/>

      <Action type="changeState" ref="ServerStart"/>
		</State>

		<State name="ServerStart">
      <Action name="SnmpGetRequest" type="input" publisher="UdpHandler">
        <DataModel ref="DataModels:SNMPHeaderV2_"/>
      </Action>

			<Action name="ConnHandleSlurp" type="slurp" valueXpath="//SnmpGetRequest//RequestId//Value" setXpath="//SnmpResponse//RequestId"/>
			<Action name="ConnHandleSlurp2" type="slurp" valueXpath="//SnmpGetRequest//Community//Value" setXpath="//SnmpResponse//SnmpCommunity"/>

			<Action name="SnmpResponse" type="output" publisher="UdpHandler">
				<DataModel ref="DataModels:SnmpResponse"/>
      </Action>

       <Action type="call" method="exitProgram" publisher="Peach.Agent"/>
    </State>
  </StateModel>
</Peach>
<!--End-->