#!/usr/bin/env python

deps = [
	'NLog.dll',
	'nunit.framework.dll',
	'SharpPcap.dll',
	'Peach.Core.dll',
	'System.dll',
	'System.Core.dll',
	'System.Xml.dll',
	'Godel.Core.dll',
