<?xml version="1.0" encoding="utf-8"?>
<PitDefines>
  <All>
    <Define key="LoggerPath" name="" description="" type="" value="logs/dhcpV6/"/>
    <Define key="SourcePort" name="" description="" type="" value="547"/>
    <Define key="MulticastDHCP" name="" description="" type="" value="ff02::1:2"/>
    <Define key="TargetIPv6" name="" description="" type="" value="fe80::5054:ff:fe02:c880"/>
    <Define key="TargetIPv6Lease" name="" description="" type="" value="fe80::908:7a38:6156:acce"/>
    <Define key="SourceIPv6" name="" description="" type="" value="fe80::3e97:eff:fe47:524a%4"/>
    <Define key="MaxTries" name="" description="" type="" value="20"/> <!-- Maximum number of packets to listen for before going to next iter -->
    <Define key="SourceMAC" name="" description="" type="" value="000c291bf55d"/>
    <Define key="TargetPort" name="" description="" type="" value="546"/>
    <Define key="Strategy"  name="" description="" type="" value="Random"/>
    <Define key="Interface"  name="" description="" type="" value="::1"/> <!-- This needs to be "::1" to bind to all interfaces. This is because ipv6 multicast oddness. -->
    <Define key="RemoteAgentIP"  name="" description="" type="" value="127.0.0.1"/>
    <Define key="PitLibraryPath" name="" description="" type="" value="."/>


    <Define key="DuidTime" name="" description="" type="" value="0"/>
    <Define key="DuitTimeRequest" name="" description="" type="" value="0"/>
    <Define key="DuidTimeSolicit" name="" description="" type="" value="0"/>
    <Define key="Domain" name="" description="" type="" value="PeachDomain"/>
    <Define key="TransactionId" name="" description="" type="" value="4c137f"/>
  </All>

  <Linux platform="linux">
    <Define key="tsharkInterface" name="" description="" type="" value="eth0"/>
    <Define key="TargetInterface" name="" description="" type="" value="eth0"/>
    <Define key="tsharkBin" name="" description="" type="" value="/usr/bin/tshark"/>
  </Linux>

  <OSX platform="osx">
    <Define key="tsharkInterface" name="" description="" type="" value="en0"/>
    <Define key="TargetInterface" name="" description="" type="" value="en0"/>
    <Define key="tsharkBin" name="" description="" type="" value="/usr/local/bin/tshark"/> <!-- fix depending on actual install location -->
  </OSX>

  <Windows platform="windows">
    <Define key="TargetInterface" name="" description="" type="" value="Local Area Connection"/>
    <Define key="tsharkInterface" name="" description="" type="" value="2"/>
    <Define key="tsharkBin" name="" description="" type="" value="C:\Program Files\Wireshark\tshark.exe"/>
  </Windows>
</PitDefines>
