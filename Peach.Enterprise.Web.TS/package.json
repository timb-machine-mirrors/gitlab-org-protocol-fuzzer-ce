{
  "version": "0.0.0",
  "nodeVersion": "1.4.3",
  "private": true,
  "name": "dashApp",
  "description": "Npm testing setup",
  "repository": "",
  "license": "copyrighted",
  "devDependencies": {
      "http-server": "^0.6.1",
      "protractor":  "~0.20.1",
      "typescript":  "~1.0.1",
      "shelljs":     "^0.2.6",
      "karma":       "~0.10",
      "bower":       "^1.3.1",
      "typescript-compiler": "^0.9.7-3"
  },
  "scripts": {
    "postinstall": "bower install",

    "prestart": "tsc @tsc-args.txt",
    "start": "http-server -p 8000 .",
    // putting npm install _after_ the start is wonky, but we don't really
    // rely on it much. it's mostly there as ultra backup for the time being.
    // (npm install _was_ in the prestart location)
    "poststart": "npm install",

    "pretest": "npm install",
    "test": "karma start test/karma.conf.js",
    "test-single-run": "karma start test/karma.conf.js  --single-run",

    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",

    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/protractor-conf.js"
  }
}
